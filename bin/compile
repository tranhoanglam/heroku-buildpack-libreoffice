#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install Liberoffice"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://dl.dropboxusercontent.com/u/75461649/liberoffice.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR

curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/liberoffice.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/libreoffice/opt/libreoffice5.1/program"' >> $PROFILE_PATH
